!!!
%html
  %head
    %title File Cabinet | Your Life's Work
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = csrf_meta_tags
  %body
    %header
      .header-inner.space-between.vertical-align.border-bottom
        = link_to "FileCabinet", root_path
        
        %nav
          -if user_signed_in?
            .space-between.nav-panel-authorized.font-16
              .std-btn
                = link_to "Create Doc", new_doc_path
              .std-btn
                = link_to "Sign Out", destroy_user_session_path, method: :delete
          
          -else
            .std-btn
              = link_to "Log In", new_user_session_path

    %p.notice= notice
    %p.alert= alert
    .main-content
      = yield